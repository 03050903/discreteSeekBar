<resources>
    <!-- DiscreteSeekBar specific attributes -->
    <attr name="discreteSeekBarStyle" format="reference"/>
    <declare-styleable name="DiscreteSeekBar">
        <attr name="min" format="integer|dimension"/>
        <attr name="max" format="integer|dimension"/>
        <attr name="mirrorForRtl" format="boolean"/>
        <attr name="progressColor" format="color|reference"/>
        <attr name="trackColor" format="color|reference"/>
        <attr name="indicatorTextAppearance" format="reference"/>
        <attr name="indicatorColor" format="color|reference"/>
        <attr name="indicatorElevation" format="dimension"/>
        <attr name="indicatorFormatter" format="string|reference"/>
        <attr name="rippleColor" format="color|reference"/>
    </declare-styleable>
</resources>